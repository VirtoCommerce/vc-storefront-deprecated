<div id="account-wishlist.tpl.liquid" type="text/ng-template">
  <div class="grid grid-border">
    <div class="sidebar grid-item large--one-fifth collection-filters" id="collectionFilters">
      <ul class="product-list-container list __items">
        <li ng-repeat="listName in $ctrl.listNames"
            ng-class="{'activeList': listName.active}"
            ng-click="$ctrl.select(listName)"
            style="cursor:pointer" class="product-list-name selectedTypeOfList list-item">
          <a ng-bind="listName.title"></a>
        </li>
      </ul>
    </div>
    <div class ="grid-item large--four-fifths grid-border--left" ng-cloak="">
      <span class="list-item-header grid-item" ng-if="!$ctrl.selectedTab.title">{{'wishlist.general.list_not_selected' |t}}</span>
      <span ng-if="$ctrl.selectedTab.title" class="list-item-header grid-item"
            ng-bind="$ctrl.selectedTab.title">
      </span>
     

      <span ng-if="$ctrl.wishlist.itemsCount == 0 || !$ctrl.wishlist && $ctrl.selectedTab" ng-cloak="">
        <h2>{{ 'wishlist.general.empty' | t }}</h2>
        <p>{{ 'wishlist.general.continue_browsing_html' | t }}</p>
      </span>
       <div class="ajax-informer fade" ng-if="$ctrl.wishlistIsUpdating">
          <div class="loader"></div>
          <span>{{ 'wishlist.general.loading_wishlist_message' | t }}</span>
        </div>
      <table ng-show="$ctrl.wishlist.itemsCount > 0" class="vc-product-table">
        <tr class="product-row" ng-repeat="lineItem in $ctrl.wishlist.items">
          <td class="product-img">
            <div class="img-inner">
              <div class="wishlist-item-remove">
                <a class="icon-fallback-text btn-secondary remove ajaxifyCart--remove" ng-click="$ctrl.removeLineItem(lineItem)">
                  <span class="icon icon-x" aria-hidden="true"></span>
                  <span class="fallback-text">{{ 'products.compare_list.remove' | t }}</span>
                </a>
              </div>
              <img alt="{% raw %}{{ lineItem.name }}{% endraw %}" ng-src="{% raw %}{{ lineItem.imageUrl }}{% endraw %}" ng-if="lineItem.imageUrl" />
              <div class="no-product-image" ng-if="!lineItem.imageUrl">
                <img src="{{ 'no-image.svg' | asset_url }}" />
              </div>
            </div>
          </td>
          <td class="product-descr">
            <a class="product-list-advanced" ng-bind="lineItem.name" href="{% raw %}{{ 'product/' + lineItem.productId }}{% endraw %}"></a>
            <div ng-bind="'Added ' + (lineItem.createdDate | date:'MMMM d, y')" 
                 class="product-list-createdDate">
            </div>
            <button type="button" name="add" id="addToCart" class="btn list-item-addToCartBtn AddShopCart"
                    ng-disabled="!$ctrl.wishlist.id || !$ctrl.wishlist.isValid" 
                    ng-click="$ctrl.addToCart(lineItem, 1)" 
                    interactor-arg="{{ $ctrl.wishlist.id }}">
              
                    <span class="icon icon-cart"></span>
                    <span id="addToCartText">{{ 'products.product.add_to_cart' | t }}</span>
            </button>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>